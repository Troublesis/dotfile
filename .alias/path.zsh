# Path and conf alias
alias e-path="vi ~/.alias/path.zsh"
alias e-docker="vi ~/.alias/docker.zsh"
alias e-bindkey="vi ~/.alias/bindkey.zsh"

alias s-env="source .venv/bin/activate"
#
# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"
alias dl="cd ~/Downloads"


# mv, rm, cp

alias mv="mv -v"
alias rm="rm -i -v"


alias cp="cp -v"
# alias rm -rf="rm -rfi"

alias ez="vi ~/.zshrc"
alias e-zsh="vi ~/.zshrc"
alias r="source ~/.zshrc"

# alias r-zsh="source ~/.zshrc"

alias e-ssh="vi ~/.ssh/config"


alias e-tmux="vi ~/.tmux.conf"
alias r-tmux="tmux source ~/.tmux.conf"

alias e-as="vi ~/dotfiles/.alias/alias.zsh"
alias as="vi ~/dotfiles/.alias/alias.zsh"
alias e-git="vi ~/dotfiles/.alias/git.zsh"
alias e-vi="vi ~/.config/nvim/init.lua"

alias e-form="vi ~/dotfiles/bin/install_homebrew_formulaes.sh"
alias e-cask="vi ~/dotfiles/bin/install_homebrew_casks.sh"
alias e-app="vi ~/dotfiles/bin/install_app_store.sh"


# dotfile README.md

alias e-readme="vi ~/dotfiles/README.md"

# midnight-commander
alias e-mc="vi ~/.config/mc/mc.ext.ini"

